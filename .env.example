# Application
APP_ENV=development  # development, staging, production
APP_SECRET_KEY=your-secret-key-here-change-in-production
APP_BASE_URL=http://localhost:8000

# Database
# Note: The app will automatically add +asyncpg if you use postgresql://
# This works with both local and cloud providers (Render, Railway, etc.)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/yume

# Redis
REDIS_URL=redis://localhost:6379/0

# Twilio WhatsApp (recommended)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_WHATSAPP_NUMBER=+14155238886  # Your Twilio WhatsApp number

# Meta WhatsApp Business API (for Embedded Signup)
# Required for Meta Embedded Signup flow (connecting existing WhatsApp Business accounts)
# Get these from developers.facebook.com → Your App → Settings → Basic
META_APP_ID=your-facebook-app-id
META_APP_SECRET=your-facebook-app-secret
META_WEBHOOK_VERIFY_TOKEN=your-webhook-verify-token
META_ACCESS_TOKEN=
META_API_VERSION=v18.0

# OpenAI
OPENAI_API_KEY=your-openai-api-key

# Anthropic (legacy)
ANTHROPIC_API_KEY=your-anthropic-api-key

# JWT Authentication
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7 days

# Magic Link / Frontend
MAGIC_LINK_EXPIRE_MINUTES=15
FRONTEND_URL=http://localhost:3000

# Admin
ADMIN_MASTER_PASSWORD=change-in-production

# Observability (optional for v1)
SENTRY_DSN=
